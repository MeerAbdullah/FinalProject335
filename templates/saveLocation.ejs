<!doctype html>
<html lang="en">
<!-- header -->
<head>
    <meta charset="utf-8">
    <title>Save Location</title>
    <style>
        /* for body of html */
        body {
            text-align: center;
            color: #000;
            background-color: #fff;
        }

        /* Button styling */
        button {
            background-color: #000;
            color: #fff;
            cursor: pointer;
            margin-top: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 0.35rem;
        }
        button:hover {
            background-color: rgb(50, 50, 50);
            transition: background-color 0.3s ease;
        }

        /* styling a href links */
        a {
            display: block;
            color: #000;
            margin-top: 1.25rem;
        }
    </style>
</head>
<body>
    <!-- form to save favorite location -->
    <h1>Save Your Favorite Location</h1>
    <form action="/saveLocationForm" method="post">
        Name: <input type="text" id="name" name="name" required style="padding: 8px;margin-top: 5px;" placeholder="Case Sensitive Name"><br>
        Password: <input type="password" id="password" name="password" required style="padding: 8px;margin-top: 5px;" placeholder="Case Sensitive Password"><br>
        City: <input type="text" id="city" name="city" required style="padding: 8px;margin-top: 5px;" placeholder="City"><br>
        <button type="submit">Save Location</button>
    </form>
    <a href="/">Return to Home</a>
</body>
</html>
